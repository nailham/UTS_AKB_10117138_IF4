<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/home_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-4dp"
        android:layout_marginEnd="4dp"
        android:baseline="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_header_profile" />

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/colorNavigationText"
        android:layout_below="@+id/home_img" />
    <ImageView
        android:id="@+id/home_img_profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/logo_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:scaleType="centerInside"
        android:src="@drawable/ilham" />
    <TextView
        android:id="@+id/home_tv_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/NamaSendiri"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/whitethree"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/home_img_profile" />
    <TextView
        android:id="@+id/home_tv_tentangdiri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="@string/TentangDiri"
        android:textSize="19dp"
        android:gravity="center"
        android:layout_below="@+id/home_tv_nama" />
    <View
        android:id="@+id/View1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black"
        android:layout_marginTop="10dp"
        android:layout_below="@id/home_tv_tentangdiri"/>

    <TextView
        android:id="@+id/home_tv_interes"
        android:layout_width="match_parent"
        android:layout_height="194dp"
        android:layout_below="@+id/home_tv_nama"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="200dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="@string/Interes"
        android:textSize="18dp" />

</RelativeLayout>